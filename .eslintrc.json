{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"wikimedia/jquery",
		"wikimedia/mediawiki",
		"wikimedia/mocha",
		"wikimedia/server"
	],
	"rules": {
		"eqeqeq": 0,
		"jsdoc/require-param": 0,
		"jsdoc/require-param-type": 0,
		"jsdoc/require-returns": 0,
		"max-len": 0,
		"no-case-declarations": 0,
		"no-console": 0,
		"no-jquery/no-class-state": 0,
		"no-jquery/no-global-selector": 0,
		"no-jquery/no-grep": 0,
		"no-jquery/no-in-array": 0,
		"no-jquery/no-map-util": 0,
		"no-jquery/variable-pattern": 0,
		"no-loop-func": 0,
		"no-multi-str": 0,
		"no-prototype-builtins": 0,
		"no-shadow": 0,
		"no-undef": 0,
		"no-underscore-dangle": 0,
		"no-unreachable-loop": 0,
		"node/no-missing-import": 0,
		"node/no-missing-require": 0
	},
	"settings": {
		"node": {
			"resolvePaths": [
				"node_modules/@types"
			],
			"tryExtensions": [
				".js",
				".ts",
				".d.ts"
			]
		}
	},
	"parserOptions": {
		"sourceType": "module"
	}
}

