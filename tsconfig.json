{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "../",
    "noEmit": false,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": false,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "scripthost"
    ]
  },
  "include": ["src/**/*", "test/*.spec.ts"],
  "exclude": ["node_modules"]
}
